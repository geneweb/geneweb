# Generic configuration file for a database named grimaldi

# Options for the login/passwd
friend_passwd=grimaldi:friend
friend_passwd_file=grimaldi.gwb/friend
wizard_passwd=grimaldi:wizard
wizard_passwd_file=grimaldi.gwb/wizard
wizard_just_friend=no

# General options
access_by_key=yes
authorized_wizards_notes=no
can_send_image=no
counter=no
default_lang=en
disable_forum=yes
hide_advanced_request=no
history=yes
history_diff=no
no_note_for_visitor=no
no_image_for_visitor=no
propose_add_family=yes
propose_place_surname=yes
propose_titles=yes

# Display options
always_surname=no
display_sosa=no
long_date=no
places_inverted=no
place_surname_link_to_ind=no
show_consang=no

# Options to limit the ancestors or descendants list/tree
max_anc_level=12
max_anc_tree=7
max_desc_level=12
max_desc_tree=7
latest_event=20

# Options to chose which module to display of an individual
module_perso_0=etat_civil
module_perso_1=parent_simple
module_perso_2=union_simple
module_perso_3=freresoeur_simple
module_perso_4=relations
module_perso_5=timeline
module_perso_6=notes
module_perso_7=sources
module_perso_8=arbre_3gen_v_photo
module_perso_tplnb=9

# Options to set a database in public mode
# Comment or uncomment to chose the desired mode
hide_private_names=no
private_years=-1
public_if_no_date=yes
public_if_titles=yes
use_restrict=no

# Options to set a database in half-public mode
# Comment or uncomment to chose the desired mode
#hide_private_names=no
#private_years=100
#public_if_no_date=yes
#public_if_titles=no
#use_restrict=no

# Options to set a database in private mode
